{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "rootDir": "src",
      "strict": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "suppressImplicitAnyIndexErrors": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}